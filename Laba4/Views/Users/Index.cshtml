@model IEnumerable<Laba4.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
 
<table class="table">
   @{ 
        // <form asp-action="DeleteUsers" asp-controller="Users" enctype="multipart/form-data" method="post">
        // @{int i = 0;}
        <form asp-controllers="Users" enctype="multipart/form-data" method="post">
        <tr>
        
        <td><button asp-action="Block" type="submit" class="btn btn-sm btn-block">Блокировать</button></td>
        <td><button asp-action="Unblock" type="submit" class="btn btn-sm btn-unblock">Разблокировать</button></td>
         <td><button asp-action="DeleteUsers" type="submit" class="btn btn-sm btn-delete">Удалить</button></td>

    </tr>
        <tr><th></th><th>Email</th><th>Последнее логирование</th><th>Имя</th><th>Дата регистрации</th><th>Статус</th></tr>
       
        @foreach (var user in Model)
        {
            <tr>
            <td><input type="checkbox" name="id" id="@user.Id" value="@user.Id" class="one" data-id="d1"/></td>
            <td>@user.Email</td>
            <td>@user.LastLogin</td>
            <td>@user.Name</td>
            <td>@user.Register</td>
            @{if (user.Status)
            {
                <td>Разблокирован</td>
            }
            else{
                <td>Заблокирован</td>
            }}
        </tr>
        }
        
        </form>//<button type="submit">Удалить</button>
        }
</table>
